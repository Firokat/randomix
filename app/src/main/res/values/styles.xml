<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/almostWhite</item>
        <item name="android:navigationBarColor">@color/goodGray</item> <!-- before P the buttons are white only! -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/colorPrimaryInverse</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverse</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryInverse</item>
        <item name="android:navigationBarColor">@color/colorPrimaryInverse</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
    </style>

    <style name="AppTheme.dark.green" parent="AppTheme.dark">
        <item name="colorAccent">@color/greenAccent</item>
    </style>

    <style name="AppTheme.green" parent="AppTheme">
        <item name="colorAccent">@color/greenAccent</item>
    </style>

    <style name="AppTheme.dark.orange" parent="AppTheme.dark">
        <item name="colorAccent">@color/orangeAccent</item>
    </style>

    <style name="AppTheme.orange" parent="AppTheme">
        <item name="colorAccent">@color/orangeAccent</item>
    </style>

    <style name="AppTheme.dark.teal" parent="AppTheme.dark">
        <item name="colorAccent">@color/tealAccent</item>
    </style>

    <style name="AppTheme.teal" parent="AppTheme">
        <item name="colorAccent">@color/tealAccent</item>
    </style>

    <style name="AppTheme.dark.violet" parent="AppTheme.dark">
        <item name="colorAccent">@color/violetAccent</item>
    </style>

    <style name="AppTheme.violet" parent="AppTheme">
        <item name="colorAccent">@color/violetAccent</item>
    </style>

    <style name="AppTheme.dark.pink" parent="AppTheme.dark">
        <item name="colorAccent">@color/pinkAccent</item>
    </style>

    <style name="AppTheme.pink" parent="AppTheme">
        <item name="colorAccent">@color/pinkAccent</item>
    </style>

    <style name="AppTheme.dark.lightBlue" parent="AppTheme.dark">
        <item name="colorAccent">@color/lightBlueAccent</item>
    </style>

    <style name="AppTheme.lightBlue" parent="AppTheme">
        <item name="colorAccent">@color/lightBlueAccent</item>
    </style>

</resources>
